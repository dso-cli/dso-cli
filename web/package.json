{
  "name": "dso-web-ui",
  "version": "0.1.0",
  "description": "DSO Web UI with Vue.js and PrimeVue",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:full": "concurrently \"npm run dev\" \"npm run server\"",
    "server": "node server.js",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "npm run test && npm run test:e2e"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.86.0",
    "@types/dompurify": "^3.0.5",
    "@vueuse/core": "^14.1.0",
    "chart.js": "^4.5.1",
    "dompurify": "^3.3.0",
    "marked": "^17.0.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typed.js": "^2.1.0",
    "vue": "^3.4.0",
    "vue-chartjs": "^5.3.3",
    "vue-typed-js": "^0.1.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@tailwindcss/forms": "^0.5.10",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "happy-dom": "^20.0.11",
    "playwright": "^1.57.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.9.3",
    "vite": "^5.0.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.5"
  }
}
